# Example environment variables for Next.js
# Rename this file to .env.local and set your real values

API_URL=#{API_URL} # e.g., http://localhost:3001

# Configuración de la API Externa (para APIs internas que conectan con backend)
# URL de la API externa - ajustar según el ambiente

# Desarrollo (ejemplo)
EXTERNAL_API_URL=http://localhost:3001/api

# Producción (descomentar cuando esté disponible)
# EXTERNAL_API_URL=https://api-backend.waiwahost.com/api

# Configuración del Sistema de Pagos

# API Externa (Backend Real) - Sistema de Pagos
NEXT_PUBLIC_EXTERNAL_API_URL=http://localhost:3001
NEXT_PUBLIC_USE_EXTERNAL_API=false

# Configuración de desarrollo
NODE_ENV=development

# Variables de autenticación
NEXTAUTH_SECRET=tu_nextauth_secret_aqui
NEXTAUTH_URL=http://localhost:3000

# Variables de base de datos (si se necesitan en el frontend)
DATABASE_URL=postgresql://usuario:password@localhost:5432/database_name

# Variables de logging
NEXT_PUBLIC_LOG_LEVEL=debug

# Variables para testing
NEXT_PUBLIC_MOCK_MODE=true

# Variables de empresa por defecto (para desarrollo)
NEXT_PUBLIC_DEFAULT_EMPRESA_ID=1

# Configuración de timeout para APIs
NEXT_PUBLIC_API_TIMEOUT=10000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3
NEXT_PUBLIC_API_RETRY_DELAY=1000

# Configuración del sistema de pagos
NEXT_PUBLIC_ENABLE_PAYMENT_FEATURES=true
NEXT_PUBLIC_ENABLE_PAYMENT_REPORTS=true
NEXT_PUBLIC_ENABLE_PAYMENT_STATS=true
